<h2>Users</h2>


<% unless locals.empty? %>
  <%= message %>
<% end %>


<h3>Sign Up</h3>
<form action="/users/new" method="POST">
  <p>Username: <input type="text" name="username" pattern="[a-zA-Z0-9]+" minlength="5" maxlength="12" required></p>
  <p>Email: <input type="email" name="email" pattern="/\A([\w+\-].?)+@[a-z\d\-]+(\.[a-z]+)*\.[a-z]+\z/i" required></p>
  <p>Password: <input type="text" name="password" minlength="8"required></p>
  <input class="btn btn-primary" type="submit">
</form>

<p> Already a user? <a href="/login">Login</a> </p>
